# Production Environment Configuration
# Copy this file to .env and update with your actual values

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@yourcompany.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@yourcompany.com

# IMAP Configuration
IMAP_SERVER=imap.gmail.com
IMAP_USERNAME=your-email@yourcompany.com
IMAP_PASSWORD=your-app-specific-password

# LLM Configuration
PRIMARY_LLM=ollama/llama2
OLLAMA_BASE_URL=http://localhost:11434
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2048

# Search Configuration
SEARCH_API_KEY=your-search-api-key
SEARCH_ENGINE=serper
SEARCH_MAX_RESULTS=10

# Calendar Configuration
CALENDAR_API_KEY=your-calendar-api-key
CALENDAR_PROVIDER=google
CALENDAR_TIMEZONE=UTC

# Database Configuration
DATABASE_URL=sqlite:///./data/email_assistant.db
DATABASE_POOL_SIZE=5

# File Storage Configuration
KNOWLEDGE_BASE_PATH=./data/knowledge_base
DRAFTS_PATH=./data/drafts
ATTACHMENTS_PATH=./data/attachments
MAX_ATTACHMENT_SIZE=26214400

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false
SECRET_KEY=your-super-secret-key-change-this-in-production
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ACCESS_LOG_EXPIRE=3600

# Security Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/email_assistant.log
LOG_MAX_SIZE=10485760

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Performance Configuration
CACHE_TTL=3600
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
